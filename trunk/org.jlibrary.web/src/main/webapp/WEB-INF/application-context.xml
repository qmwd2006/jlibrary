<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
  "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
   	<bean id="template" class="org.jlibrary.web.services.ConfigurationService">
         <property name="templateDirectory" value="templates/terrafirma"/>
         <property name="registrationEnabled" value="true"/>
         <property name="operationInputBandwidth" value="102400"/>
         <property name="operationOutputBandwidth" value="102400"/>
         <property name="totalInputBandwidth" value="302400"/>
         <property name="totalOutputBandwidth" value="302400"/>
         <!-- <property name="templateDirectory" value="/software/apache-tomcat-6.0.13-pruebas/webapps/jlibrary/templates/terrafirma"/> -->
   	</bean>
   
  <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter" lazy-init="false">
    <property name="beans">
      <map>
        <entry key="bean:name=jLibraryBean1" value-ref="jLibraryMBean"/>
      </map>
    </property>
  </bean>
  
  <bean id="jLibraryMBean" class="org.jlibrary.web.mbeans.JLibraryMBean">
  </bean>
</beans>